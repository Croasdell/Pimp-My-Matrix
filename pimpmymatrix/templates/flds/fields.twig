{% includeTranslations
	"Rename",
	"Delete",
	"Remove",
	"Give your tab a name."
%}

{% includeCssFile "//fonts.googleapis.com/css?family=Coming+Soon" %}

{% macro tab(tabName, selectedBlockTypes) %}
	<div class="fld-tab">
		<div class="tabs">
			<div class="tab sel draggable">
				<span>{{ tabName }}</span>
				<a class="settings icon" title="{{ 'Edit'|t }}"></a>
			</div>
		</div>
		<div class="fld-tabcontent">
			{% for blockType in selectedBlockTypes %}
				<div class="fld-field" data-id="{{ blockType.matrixBlockTypeId }}">
					<a class="settings icon" title="{{ 'Edit'|t }}"></a>
					<span>{{ blockType.getBlockType().name }}</span>
					<input class="id-input" type="hidden" name="blockTypeFieldLayout[{{ tabName|e('url') }}][]" value="{{ blockType.matrixBlockTypeId }}">
				</div>
			{% endfor %}
		</div>
	</div>
{% endmacro %}

<div id="pimpmymatrix-fields-configurator" class="fieldlayoutform">

	{#<input type="hidden" name="fieldId" value="{{ matrixField.id }}">#}

	<h2>{{ "Editing the “"~blockType.name~"” block field layout"|t }}</h2>

	<div class="fld-tabs">
		{#% if existingBlockTypeGroups and existingBlockTypeGroups|length %}
			{% import _self as macros %}

			{% for tabName,selectedBlockTypes in existingBlockTypeGroups %}
				{{ macros.tab(tabName, selectedBlockTypes) }}
			{% endfor %}
		{% endif %#}
	</div>

	<div class="newtabbtn-container">
		<div class="btn add icon">{{ "New Tab"|t }}</div>
	</div>

	<div class="unusedfields">
		{#% set unGroupedSelectedBlockTypeIds = [] %}

		{% if existingBlockTypeGroups and existingBlockTypeGroups|length %}
			{% for groupName,selectedBlockTypes in existingBlockTypeGroups %}
				{% for selectedBlockType in selectedBlockTypes %}
					{% set unGroupedSelectedBlockTypeIds = unGroupedSelectedBlockTypeIds|merge([selectedBlockType.matrixBlockTypeId]) %}
				{% endfor %}
			{% endfor %}
		{% endif %#}

		<div class="fld-tab unused{#% if unGroupedSelectedBlockTypeIds|length == blockTypes|length %} hidden{% endif %#}">
			<div class="tabs">
				<div class="tab sel"><span>{{ "Fields"|t }}</span></div>
			</div>
			<div class="fld-tabcontent">
				{% for field in blockType.getFields() %}
					{#% set selected = blockType.id in unGroupedSelectedBlockTypeIds %#}
					<div class="fld-field unused{#% if selected %} hidden{% endif %#}" data-id="{{ field.id }}">
						<span>{{ field.name }}</span>
					</div>
				{% endfor %}
			</div>
		</div>

	</div>

</div>
